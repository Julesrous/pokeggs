<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                placeholder: 'Sacha',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first name" }%>
    <%= f.input :last_name,
                placeholder: 'Ketchen',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last name" }%>
   <%= f.input :gender, as: :radio_buttons, collection: ['Boy', 'Girl'], required: true %>
    <%= f.input :region, as: :radio_buttons , collection: ['Kanto', 'Johto', 'Hoenne', 'Sinnoh'], required: true %>
    <%= f.input :experience,
                placeholder: 'Tell your experiences as a pokemon dressor...',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "experience" }%>
    <%= f.input :email,
                placeholder: 'sacha@pokemon.pok',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%=f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
